<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:security="http://www.springframework.org/schema/security"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<bean id="bankIdEntryPoint" class="org.springframework.security.web.authentication.Http403ForbiddenEntryPoint" 
		name="http403ForbiddenEntryPoint">
	</bean>
	
	<bean id="bankIdPreAuthFilter" class="org.callistasoftware.netcare.commons.bankid.web.filter.BankIdPreAuthFilter">
		<property name="authenticationManager" ref="bankIdAuthenticationManager" />
	</bean>
	
	<bean id="bankIdAuthProvider" class="org.springframework.security.web.authentication.preauth.PreAuthenticatedAuthenticationProvider">
		<property name="preAuthenticatedUserDetailsService" ref="bankIdUserDetailsServiceImpl" />
	</bean>
	
	<security:authentication-manager id="bankIdAuthenticationManager">
		<security:authentication-provider ref="bankIdAuthProvider" />
	</security:authentication-manager>

</beans>
